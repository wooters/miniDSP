# miniDSP Doxygen configuration

PROJECT_NAME           = "miniDSP"
PROJECT_BRIEF          = "A small C library for audio DSP"
OUTPUT_DIRECTORY       = docs

# --- Input ---
INPUT                  = . README.md
FILE_PATTERNS          = *.h *.c *.md
RECURSIVE              = NO
EXCLUDE                = doxygen-awesome-css tests
USE_MDFILE_AS_MAINPAGE = README.md

# --- C optimizations ---
OPTIMIZE_OUTPUT_FOR_C  = YES
JAVADOC_AUTOBRIEF      = YES
EXTRACT_STATIC         = YES
TYPEDEF_HIDES_STRUCT   = YES

# --- Source browsing ---
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO

# --- HTML output with Doxygen Awesome theme ---
GENERATE_HTML          = YES
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_COLORSTYLE        = LIGHT

HTML_EXTRA_STYLESHEET  = doxygen-awesome-css/doxygen-awesome.css

HTML_EXTRA_FILES       = doxygen-awesome-css/doxygen-awesome-darkmode-toggle.js \
                         doxygen-awesome-css/doxygen-awesome-fragment-copy-button.js \
                         doxygen-awesome-css/doxygen-awesome-paragraph-link.js

HTML_HEADER            = doxygen-custom/header.html

# --- MathJax for any LaTeX formulae in comments ---
USE_MATHJAX            = YES

# --- Disable all non-HTML output ---
GENERATE_LATEX         = NO
GENERATE_RTF           = NO
GENERATE_MAN           = NO
GENERATE_XML           = NO

# --- Warnings ---
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
